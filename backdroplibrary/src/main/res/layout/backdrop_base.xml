<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/layout_backdrop"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_backdrop_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:padding="0dp"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/app_name"
            app:titleTextColor="@color/textColorLight">

        <ImageButton
                android:id="@+id/button_backdrop_toolbar_hide"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:tint="@android:color/white"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@android:drawable/btn_dialog"
                android:scaleType="center"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
                android:id="@+id/button_backdrop_toolbar_menu_show"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:tint="@android:color/white"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_drawer_menu_animated"
                android:scaleType="center"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        <LinearLayout
                android:id="@+id/layout_backdrop_toolbar_titles"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:animateLayoutChanges="true"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/text_backdrop_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="@string/app_name"
                    android:textColor="@color/textColorLight"
                    android:textSize="19sp"
                    android:textAlignment="center"/>

            <TextView
                    android:id="@+id/text_backdrop_toolbar_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:gravity="bottom"
                    android:text="Demonstration"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:textColor="@color/textColorLight"/>
        </LinearLayout>

        <ImageButton
                android:id="@+id/button_backdrop_toolbar_action"
                style="@style/Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="42dp"
                android:layout_height="0dp"
                android:tint="@android:color/white"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button_backdrop_toolbar_more"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

        <ImageButton
                android:id="@+id/button_backdrop_toolbar_more"
                style="@style/Widget.AppCompat.ActionButton.Overflow"
                android:layout_width="42dp"
                android:layout_height="0dp"
                android:tint="@android:color/white"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:id="@+id/layout_backdrop_actionmode"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:background="@color/colorPrimaryLight"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_backdrop_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="66dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_backdrop_toolbar">

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_backdrop_cardstack"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_backdrop_toolbar">

        <LinearLayout
                android:id="@+id/backdrop_basecard_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="false"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                    android:id="@+id/backdrop_basecard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-16dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:id="@+id/backdrop_basecard_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/backdrop_midcard_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="603dp"
                tools:layout_conversion_absoluteWidth="411dp"
                android:focusable="true">

            <androidx.cardview.widget.CardView
                    android:id="@+id/backdrop_midcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-16dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                <LinearLayout
                        android:id="@+id/backdrop_midcard_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/backdrop_topcard_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_conversion_absoluteWidth="0dp">

            <androidx.cardview.widget.CardView
                    android:id="@+id/backdrop_topcard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-16dp"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                <LinearLayout
                        android:id="@+id/backdrop_topcard_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/backdrop_cardstack_touchblock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--<include-->
    <!--android:id="@+id/action_layout_base"-->
    <!--layout="@layout/action_layout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent" />-->

    <LinearLayout
            android:id="@+id/layout_backdrop_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_backdrop_reveal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryLight"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="0dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>